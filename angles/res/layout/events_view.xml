<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/host"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Event Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/host"
        android:layout_below="@+id/host"
        android:layout_marginTop="24dp"
        android:text="Start Time: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioButton
        android:id="@+id/attendingYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startTime"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@+id/startTime"
        android:text="Yes" />

    <TextView
        android:id="@+id/attending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startTime"
        android:layout_alignTop="@+id/attendingYes"
        android:text="Attending?"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioButton
        android:id="@+id/attendingNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/attendingYes"
        android:layout_below="@+id/attendingYes"
        android:text="No" />

    <RadioButton
        android:id="@+id/attendingMaybe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/attendingNo"
        android:layout_below="@+id/attendingNo"
        android:text="Maybe" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eventName"
        android:layout_alignBottom="@+id/eventName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:text="Other Angles" />

    <TextView
        android:id="@+id/host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="16dp"
        android:text="Hosted By: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/Guests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/attendingMaybe" >
    </ListView>

</RelativeLayout>